<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetTracker.CurrentBudgetInfo">
    <ContentPage.Content>
        <StackLayout>
            
            <Label x:Name="sBudget"
                   TextColor="Green"/>
            <Label x:Name="currentBalance"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   TextColor="GreenYellow"/>
            
            <Entry x:Name="expenditure"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Placeholder="Enter amount spent"
                   Keyboard="Numeric"/>
            
            <Button x:Name="spenditureButton"
                    Text="Save"
                    BackgroundColor="Blue"
                    TextColor="White"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Clicked="AddExpenditure"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>